<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.assignment.hazechecker.Fragments.HomeFragment">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:layout_column="0"
                android:background="@drawable/cell_shape"
                android:padding="8dp"
                android:text="@string/table_index"
                android:textColor="@android:color/black" />

            <TextView
                android:background="@drawable/cell_shape"
                android:padding="8dp"
                android:text="@string/table_value"
                android:textColor="@android:color/black"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="0"
                android:background="@drawable/cell_shape"
                android:padding="8dp"
                android:text="@string/table_psi"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/home_psi_value"
                android:background="@drawable/cell_shape"
                android:padding="8dp"
                android:text="@string/empty_value"
                android:textColor="@android:color/black"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="0"
                android:background="@drawable/cell_shape"
                android:padding="8dp"
                android:text="@string/table_pm25"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/home_pm25_value"
                android:background="@drawable/cell_shape"
                android:padding="8dp"
                android:text="@string/empty_value"
                android:textColor="@android:color/black"/>
        </TableRow>
    </TableLayout>

</FrameLayout>
